programa {
	funcao inicio() {
	    real salario_mensal, percentual_de_reajuste, novo_salario
	    
	    escreva("Digite o salário mensal do funcionário: ")
	    
	    leia(salario_mensal)
	    
	    escreva("Digite o percentual de reajuste: ")
	    
	    leia(percentual_de_reajuste)
	    
	    novo_salario = salario_mensal + (salario_mensal * (percentual_de_reajuste / 100))
	    
	    escreva("O novo salário é: ", novo_salario, "\n")
	}
}
